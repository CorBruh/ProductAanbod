@model ProductAanbod.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductNaam" class="control-label"></label>
                <input asp-for="ProductNaam" class="form-control" />
                <span asp-validation-for="ProductNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                        <label asp-for="Categorie" class="control-label"></label>
                        <select asp-for="CategorieId" style="width: auto;"
                                class="form-control"
                                asp-items="@(new SelectList(Model.Categorie,"Id", "CategorieNaam"))">
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                        <label asp-for="Verzekeraar" class="control-label"></label>
                        <select asp-for="VerzekeraarId" style="width: auto;"
                                class="form-control"
                                asp-items="@(new SelectList(Model.Verzekeraar,"Id", "VerzekeraarNaam"))">
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PremiePerMaand" class="control-label"></label>
                <input id="NoDot" asp-for="PremiePerMaand" class="form-control" />
                <span asp-validation-for="PremiePerMaand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick="DotChecker();" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Currency.js"></script>
}
